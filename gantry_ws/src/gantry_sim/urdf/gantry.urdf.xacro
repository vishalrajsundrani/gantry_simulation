<?xml version="1.0"?>
<robot name="gantry" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Simple 3-axis linear gantry -->
  <link name="base_link">
    <visual><geometry><box size="1 1 0.1"/></geometry></visual>
  </link>

  <!-- X-axis -->
  <joint name="x_slide" type="prismatic">
    <parent link="base_link"/>
    <child link="x_carriage"/>
    <origin xyz="0 0 0.1"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="1.0" effort="10" velocity="1"/>
  </joint>

  <link name="x_carriage">
    <visual><geometry><box size="0.5 0.3 0.1"/></geometry></visual>
  </link>

  <!-- Y-axis -->
  <joint name="y_slide" type="prismatic">
    <parent link="x_carriage"/>
    <child link="y_carriage"/>
    <origin xyz="0 0 0.1"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="0.5" effort="10" velocity="1"/>
  </joint>

  <link name="y_carriage">
    <visual><geometry><box size="0.3 0.3 0.1"/></geometry></visual>
  </link>

  <!-- Z-axis -->
  <joint name="z_slide" type="prismatic">
    <parent link="y_carriage"/>
    <child link="tool_head"/>
    <origin xyz="0 0 0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="0.3" effort="10" velocity="1"/>
  </joint>

  <link name="tool_head">
    <visual><geometry><cylinder radius="0.05" length="0.1"/></geometry></visual>
  </link>

</robot>
